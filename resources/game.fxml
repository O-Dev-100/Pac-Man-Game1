<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="gamePane" xmlns="http://javafx.com/javafx/11.0.2"
       xmlns:fx="http://javafx.com/fxml/1"
       prefWidth="400" prefHeight="400">
    <children>
        <Button fx:id="startButton" layoutX="150" layoutY="350" text="Start New Game" onAction="#startNewGame"/>
        <Label fx:id="scoreLabel" layoutX="10" layoutY="10" text="Score: 0"/>
    </children>
</Pane>
